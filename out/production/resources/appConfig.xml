<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class = "kyh.springCoreBasic.member.MemberServiceImpl">
        <constructor-arg name = "memberRepository" ref = "memberRepository"/>
    </bean>
    <bean id = "memberRepository" class = "kyh.springCoreBasic.member.MemoryMemberRepository"/>
    <bean id = "discountPolicy" class = "kyh.springCoreBasic.discount.RateDiscountPolicy"/>
    <bean id ="orderService" class = "kyh.springCoreBasic.order.OrderServiceImpl">
        <constructor-arg name="memberRepository" ref = "memberRepository"/>
        <constructor-arg name="discountPolicy" ref = "discountPolicy"/>
    </bean>
</beans>